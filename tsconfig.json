{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "api": ["api"],
      "assets": ["assets"],
      "common": ["common"],
      "core": ["core"],
      "navigations": ["navigations"],
      "providers": ["providers"],
      "reduxes": ["reduxes"],
      "screens": ["screens"],
    },
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noEmit": true,
    "target": "ES3",
    "experimentalDecorators": true,
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
